SELECT
    branch_name,
    assets / 100000 AS "assets in lakhs"
FROM
    Branch;

SELECT
    d.customer_name,
    b.branch_name,
    COUNT(d.accno) AS account_count
FROM
    Depositer d
JOIN
    BankAccount b ON d.accno = b.accno
GROUP BY
    d.customer_name, b.branch_name
HAVING
    COUNT(d.accno) >= 2;

CREATE VIEW Branch_Loan_Summary AS
SELECT
    branch_name,
    SUM(amount) AS total_loan_amount
FROM
    Loan
GROUP BY
    branch_name; 
    
SELECT * FROM Branch_Loan_Summary;
